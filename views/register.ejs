<%- include("partials/header") %>

<div class="container">
	<div class="myForms text-center mt-5">
		<h1 class="display-2">Sign-Up!</h1>
		<hr>
		<form method="POST" action="/register">
			<div class="form-group">
				<input pattern="[a-zA-Z0-9]+" title="You cannot use special characters and spaces." minlength="4" class="form-control text-center" type="text" placeholder="username" name="username">
			</div>
			<div class="form-group">
				<input pattern="[^ ,]+" title="You cannot use spaces in password." minlength="4" class="form-control text-center" type="password" placeholder="password" name="password">
			</div>
			<div class="form-group">
				<button class="btn btn-md btn-success p-1">Register</button>
				<a class="btn btn-md btn-secondary p-1" href="/campgrounds">Back</a>
			</div>
		</form>
	</div>
</div>

<%- include("partials/footer") %>