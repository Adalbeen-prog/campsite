<%- include("../partials/header") %>

<!-- <div id="bg">
	
</div> -->

<div class="container">
	<div class="mt-5">
		<h1 class="display-2 text-center">Edit review</h1>
		<hr>
		<div class="text-center p-1">
			<div class="myForms">
				<form action="/campgrounds/<%= campground._id %>/comments/<%= comment.id %>?_method=PUT" method="POST">
					<div class="form-group">
						<textarea class="form-control text-center" type="text" placeholder="Text" name="comment[text]"><%= comment.text %></textarea>
					</div>
					<div class="rating mb-2">
						<% for(var i = 5; i > 0; i--) {%>
							<% if(comment.star == i) {%>
								<input id="star<%= i %>" name="comment[star]" type="radio" value="<%= i %>" class="radio-btn hide" checked="checked"/>
								<label for="star<%= i %>">☆</label>
							<% } else { %>
								<input id="star<%= i %>" name="comment[star]" type="radio" value="<%= i %>" class="radio-btn hide" />
								<label for="star<%= i %>">☆</label>
						<% }} %>
						<!-- <div class="clear"></div> -->
					</div>
					<div class="form-group pl-5 pr-5">
						<button class="btn btn-success btn-md btn-block">Submit!</button>
					</div>
				</form>
			</div>
				
			<br>
		<a class="btn btn-secondary btn-sm" href="/campgrounds/<%= campground.id %>">Back</a>
		</div>
		
	</div>
</div>


<%- include("../partials/footer") %>