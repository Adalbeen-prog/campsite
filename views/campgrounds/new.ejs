<div class="container">
	<div class="mt-5">
		<h1 class="display-4 text-center">Create a new Campground</h1>
		
		<div class="text-center p-5">
			<div class="myForms">
				<form action="/campgrounds" method="POST" enctype="multipart/form-data">
					<div class="form-group">
						<input class="form-control text-center" required minlength="5" type="text" placeholder="Name of campground" name="campground[name]">
					</div>
					<div class="form-group text-center">
						<label for="image">Image</label>
						<input type="file" id="image" name="image" accept="image/*" required>
					</div>
					<div class="form-group">
						<input class="form-control text-center" required minlength="5" type="text" placeholder="info" name="campground[info]">
					</div>
					<div class="form-group">
						<textarea class="form-control text-center" required minlength="5" placeholder="description" name="campground[description]"></textarea>
					</div>
					<div class="form-group">
						<input class="form-control text-center" required minlength="2" id="location" type="text" placeholder="location">
					</div>
					<div id="message">
						
					</div>
					<div class="form-group">
						<input class="form-control text-center hidden" type="text" name="campground[location]">
					</div>
					<div class="row m-0">
						<div class="form-group col-7">
							<input class="form-control text-center" required minlength="1" type="number" placeholder="price/night" name="campground[price][value]">
						</div>
						<div class="form-group col-5">
							<select class="form-control text-center" id="currency" name="campground[price][currency]">
							  <option class="form-control" value="CZK">CZK</option>
							  <option class="form-control" value="USD">USD</option>
							  <option class="form-control" value="EUR">EUR</option>
							</select>
						</div>
					</div>
					<div class="form-group pl-5 pr-5">
						<button id="submit" class="btn btn-success btn-md btn-block">Submit!</button>
					</div>
				</form>
			</div>
				
			<br>
		<a class="btn btn-secondary btn-sm" href="/campgrounds">Back</a>
		</div>
		
	</div>
</div>


<%- include("../partials/footer") %>