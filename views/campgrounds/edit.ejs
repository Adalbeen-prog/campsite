<%- include("../partials/header") %>

<!-- <div id="bg">
	
</div> -->

<div class="container">
	<div class="mt-5">
		<h1 class="display-4 text-center">Edit <%= campground.name %></h1>
		
		<div class="text-center p-5">
			<div class="myForms">
				<form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
					<div class="form-group">
						<input class="form-control text-center" type="text" placeholder="Name of campground" name="campground[name]" value="<%= campground.name %>">
					</div>
					<div class="form-group">
						<input class="form-control text-center" type="text" placeholder="image url" name="campground[image]" value="<%= campground.image %>">
					</div>
					<div class="form-group">
						<input class="form-control text-center" type="text" placeholder="info" name="campground[info]" value="<%= campground.info %>">
					</div>
					<div class="form-group">
						<textarea class="form-control text-center" name="campground[description]"><%= campground.description %></textarea>
					</div>
					<div class="row m-0">
						<div class="form-group col-7">
							<input class="form-control text-center" type="number" placeholder="price/night" name="campground[price][value]" value="<%= campground.price.value %>">
						</div>
						<div class="form-group col-5">
							<select class="form-control text-center" id="currency" name="campground[price][currency]">
							  <% ['CZK', 'USD', 'EUR'].forEach(function(curr){ %>
								<% if(curr == campground.price.currency){ %> 
								<option class="form-control" value="<%= curr %>" selected><%= curr %></option>
								<% } else { %>
									<option class="form-control" value="<%= curr %>"><%= curr %></option>
							  <% }}) %>
							</select>
						</div>
					</div>
					<div class="form-group pl-5 pr-5">
						<button class="btn btn-success btn-md btn-block">Submit!</button>
					</div>
				</form>
			</div>
				
			<br>
		<a class="btn btn-secondary btn-sm" href="/campgrounds/<%= campground._id %>">Back</a>
		</div>
		
	</div>
</div>


<%- include("../partials/footer") %>